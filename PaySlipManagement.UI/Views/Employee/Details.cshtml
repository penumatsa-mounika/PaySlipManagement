@model EmployeeViewModel

@{
    ViewData["Title"] = "Details";
}


<div class="container mt-5 form-wrapper p-4 bg-white rounded shadow-lg" style="max-width: 1400px; border-radius: 8px; height: 700px; overflow-y: auto; margin: 20px auto; padding: 20px; box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.1);">
    <div class="card shadow-sm border-0">
        <div class="card-body">
            <div class="d-flex justify-content-end">
                <a href="@Url.Action("Index", "Document", new { empCode = Model.Emp_Code })" class="btn btn-link text-primary">
