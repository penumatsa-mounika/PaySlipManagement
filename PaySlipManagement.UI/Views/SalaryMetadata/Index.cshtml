@model IEnumerable<PaySlipManagement.Common.Models.SalaryMetadata>

@{
    ViewData["Title"] = "Index";
}
<div class="mt-2">
    <div class="d-flex justify-content-between align-items-center">
        <div>
            <h3>Salary Details</h3>
            <p>List of Salary Details</p>
        </div>
        <div>
            <a asp-action="Create" class="btn btn-primary">Create New</a>
        </div>
    </div>
</div>
<table class="table table-striped table-bordered">
    <thead class="thead-light">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Emp_Code)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PaySlipForMonth)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DaysPaid)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AbsentDays)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EarnedBasic)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.HRA)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SpecialAllowance)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PFEmployeeShare)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ProfessionalTax)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TDS)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EarningTotal)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TotalDeductions)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NetPay)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AnnualCTC)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CTCMonth)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PFEmployerShare)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PFEmployerShareAnnual)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AnnualGrossPay)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MonthGrossPay)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OtherAdditions)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OtherDeductions)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LossOfPay)
            </th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Emp_Code)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PaySlipForMonth)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DaysPaid)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AbsentDays)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EarnedBasic)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.HRA)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SpecialAllowance)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PFEmployeeShare)
            </td>
            <td>
