@model LoginViewModel

@{
    ViewData["Title"] = "Login";
}
<div class="container mt-4">
    <div class="row d-flex justify-content-center align-items-center ">
        <div class="col col-md-8 col-lg-6 col-xl-5">
            <div class="card" style="border-radius: 1rem;">
                <div class="card-body p-4 p-lg-5 text-black">
                    <form asp-action="Login" method="post" class="login-form">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <div class="text-center mb-3 pb-1">
                            <i class="fas fa-sign-in fa-3x me-3" style="color: #ff6219;"></i>
                            <h1 class="h1 fw-bold">@ViewData["Title"]</h1>
                        </div>

                        <div class="form-outline mb-3">
                            <span class="fa fa-user"></span>
                            <label asp-for="Emp_Code" class="form-label">Emp Code</label>
                            <b><span class="text-danger">*</span></b>
                            <input asp-for="Emp_Code" class="form-control form-control-sm" />
                        </div>

                        <div class="form-outline mb-4">
                            <span class="fa fa-lock"></span>
                            <label asp-for="Password" class="form-label">Password</label>
                            <b><span class="text-danger">*</span></b>
                            <input asp-for="Password" type="password" class="form-control form-control-sm" />
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-success btn-sm">Login</button>
                        </div>

                        <div class="text-center mt-3">
                            <a href="#!" class="small text-muted">Forgot password?</a>
                            <p class="mb-2 pb-lg-2" style="color: #393f81;">
                                Don't have an account? <a href="/Account/Register" style="color: #393f81;">Register here</a>
                            </p>
                            <a href="#!" class="small text-muted">Terms of use.</a>
                            <a href="#!" class="small text-muted">Privacy policy</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>


























