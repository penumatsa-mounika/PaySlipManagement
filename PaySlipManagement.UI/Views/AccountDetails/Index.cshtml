@model List<AccountDetailsViewModel>
<div class="mt-2">
    <div class="d-flex justify-content-between align-items-center">
        <div>
            <h3>Account Details</h3>
            <p>List of Account Details</p>
        </div>
        <div>
            <a asp-action="Create" class="btn btn-primary">Create New</a>
        </div>
    </div>
</div>
<table class="table table-striped table-bordered">
    <thead class="thead-light">
        <tr>
            <th>Id</th>
            <th>Employee Code</th>
            <th>Bank Name</th>
            <th>Bank Account Number</th>
            <th>UAN Number</th>
            <th>PF Account Number</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var account in Model)
        {
            <tr>
                <td>@account.Id</td>
                <td>@account.Emp_Code</td>
                <td>@account.BankName</td>
                <td>@account.BankAccountNumber</td>
                <td>@account.UANNumber</td>
                <td>@account.PFAccountNumber</td>
                <td class="d-flex justify-content-evenly">
                    <a asp-action="Edit" asp-route-id="@account.Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@account.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@account.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
